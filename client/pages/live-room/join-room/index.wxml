<view class='container-box'>
  <view class="input-box">
    <input
      wx:if="{{roomType === 'roomID'}}"
      value="{{roomID}}"
      maxlength="20"
      bindinput='bindRoomID'
      placeholder="请输入直播室号"
      placeholder-style="color:#ffffff;opacity: 0.55;"
    />
    <input
      wx:if="{{roomType === 'roomName'}}"
      value="{{roomName}}"
      maxlength="20"
      bindinput='bindRoomName'
      placeholder="请输入直播室名称"
      placeholder-style="color:#ffffff;opacity: 0.55;"
    />
  </view>
  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio">
      <radio color='#006eff' value="roomID" checked='true' />
      房间号
    </label>
    <label class="radio">
      <radio color='#006eff' value="roomName"/>
      房间名
    </label>
  </radio-group>
</view>
<image class='video' src="../../Resources/{{pureAudio?'video':'video_press'}}.png" bindtap='tapVideo'></image>
<view class='video-box' hidden='{{pureAudio}}'>
<image src='../../Resources/tips.png'></image>
<text>音视频推流</text>
</view>
<image class='audio' src="../../Resources/{{pureAudio?'pureAudio_press':'pureaudio'}}.png" bindtap='tapAudio'></image>
<view class='audio-box'  hidden='{{!pureAudio}}'>
<image src='../../Resources/tips.png'></image>
<text>纯音频推流</text>
</view> 
<view class='bottom-btn'>
  <button type="primary" bindtap="joinRoom" hover-class="none">开始直播</button>
</view>