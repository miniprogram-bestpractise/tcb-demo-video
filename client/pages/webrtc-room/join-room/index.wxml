<view class='container-box'>
  <view class="input-box">
    <input
      value="{{roomNo}}"
      maxlength="20"
      bindinput='bindRoomNo'
      placeholder="请输入房间号"
      placeholder-style="color:#ffffff;opacity: 0.55;"
    />
  </view>

  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio">
      <radio color='#006eff' value="1v1bigsmall" checked='true' id="1v1bigsmall"/>大小布局
    </label>
    <label class="radio">
      <radio color='#006eff' value="1v1horizontal"  id="1v1horizontal"/>水平布局
    </label>
  </radio-group>

  <view class='bottom-btn'> 
    <button type="primary" bindtap="joinRoom" hover-class="none">进入房间</button>
  </view> 

</view>
